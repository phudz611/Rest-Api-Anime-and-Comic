name: Sanka Vollerei Auto Update
on:
  schedule:
  #  - cron: '0 */1 * * *' # 1 jam
  - cron: '*/15 * * * *' # 15 menit
  workflow_dispatch:

jobs:
  auto-commit:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v4
      - name: Update file timestamp
        run: |
          echo "Last auto update: $(date)" > Api_sanka_auto_update.txt
      - name: Commit and Push changes
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: 'Plana AI Auto Update'
          file_pattern: 'Api_sanka_auto_update.txt'
          commit_user_name: 'Plana AI'
          commit_user_email: 'plana@sankanime.com'
